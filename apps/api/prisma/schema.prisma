generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Still using SQLite for zero-friction dev
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String
  description String?

  // store arrays as JSON for simplicity
  ingredients Json     // string[]
  steps       Json     // string[]
  tags        Json     // string[]

  servings    Int?
  prepMinutes Int?
  cookMinutes Int?
}
